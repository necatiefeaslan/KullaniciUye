@model KullaniciUye.Models.Kullanici

@{
    ViewData["Title"] = "Create";
}

<h2>Kullanıcı Oluştur</h2>


<hr/>
<form action="Create" method="post">
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="form-group my-2">
                <label asp-for="Ad" class="control-label">İsmi:</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Soyad" class="control-label">Soyadı:</label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            
            <div class="form-group my-2">
                <label asp-for="Email" class="control-label">E-Posta:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Sifre" class="control-label">Şifre:</label>
                <input asp-for="Sifre" class="form-control" type="password" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="SifreOnayla" class="control-label">Şifre Onayla:</label>
                <input asp-for="SifreOnayla" class="form-control" />
                <span asp-validation-for="SifreOnayla" class="text-danger"></span>
            <div class="form-group my-2">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <input type="reset" value="Temizle" class="btn btn-warning" />

            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}</ div >
</form>